<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="article" type="com.indie.whitstan.rssreader.model.persistence.Article" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.chauthai.swipereveallayout.SwipeRevealLayout
            android:id="@+id/srlArticleRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:dragEdge="right"
            app:mode="same_level">

            <LinearLayout
                android:id="@+id/buttons_section"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_add_to_favorites"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:background="#d2691e"
                    android:paddingHorizontal="25dp"
                    android:drawableStart="@{article.isFavorite ? @drawable/ic_favorite_already : @drawable/ic_not_favorite_yet}"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    tools:drawableStart="@drawable/ic_not_favorite_yet"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@{article.title}"
                    tools:text="AS:_D:AS_D:SA_D:AS_D:AS_D:A_SD:_ASD:_ASA_S:D_AS:D_S:A_D:AS_D:_ASD:_AS:D_AS:_D:AS_D:AS_D:AS_D:A_SD:_ASASD:_AS:D_SA"/>
            </LinearLayout>

        </com.chauthai.swipereveallayout.SwipeRevealLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>